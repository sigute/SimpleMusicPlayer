<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <ImageView
        android:id="@+id/trackImage"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="@dimen/margin_small"
        android:layout_marginEnd="@dimen/margin_small"
        android:layout_marginStart="@dimen/margin_normal"
        android:layout_marginTop="@dimen/margin_big"
        android:importantForAccessibility="no"
        tools:src="@drawable/ic_track" />

    <TextView
        android:id="@+id/trackName"
        style="@style/TextBody"
        android:layout_width="wrap_content"

        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/trackImage"
        android:layout_alignTop="@+id/trackImage"
        android:layout_marginEnd="@dimen/margin_normal"
        android:layout_toEndOf="@+id/trackImage"
        android:ellipsize="end"
        android:maxLines="1"
        tools:text="Track Name" />

    <TextView
        android:id="@+id/trackDuration"
        style="@style/TextNote"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/trackImage"
        android:layout_marginBottom="@dimen/margin_big"
        android:layout_marginStart="@dimen/margin_normal"
        android:ellipsize="end"
        android:maxLines="1"
        tools:text="3:05" />

    <View
        android:id="@+id/divider"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_below="@+id/trackDuration"
        android:background="@color/divider" />
</RelativeLayout>